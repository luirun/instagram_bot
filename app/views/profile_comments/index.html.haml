%p#notice= notice
%h1 Profile Comments
%table
  %thead
    %tr
      %th Profile
      %th Content
      %th Related hashtags
      %th{:colspan => "3"}
  %tbody
    - @profile_comments.each do |profile_comment|
      %tr
        %td= profile_comment.profile_id
        %td= profile_comment.content
        %td= profile_comment.related_hashtags
        %td= link_to 'Show', profile_comment
        %td= link_to 'Edit', edit_profile_comment_path(profile_comment)
        %td= link_to 'Destroy', profile_comment, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Profile Comment', new_profile_comment_path
