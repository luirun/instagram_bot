= form_with(model: my_profile_statistic, local: true) do |form|
  - if my_profile_statistic.errors.any?
    #error_explanation
      %h2
        = pluralize(my_profile_statistic.errors.count, "error")
        prohibited this my_profile_statistic from being saved:
      %ul
        - my_profile_statistic.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :profile_id
    = form.number_field :profile_id
  .field
    = form.label :posts_count
    = form.number_field :post_count
  .field
    = form.label :followers_count
    = form.number_field :followers_count
  .field
    = form.label :followings_count
    = form.number_field :followings_count
  .actions
    = form.submit
